import Card from '../components/Card.astro';
import Hero from '../sections/Hero.astro';
import Header from '../sections/Header.astro';
import Countdown from '../sections/Countdown.astro';
---

<Layout title="Welcome to Astro.">
	<Header />
	<main>
		
		<Hero />
